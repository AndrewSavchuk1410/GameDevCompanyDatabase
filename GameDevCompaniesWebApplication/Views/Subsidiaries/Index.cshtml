@model IEnumerable<GameDevCompaniesWebApplication.Subsidiaries>

@{
    ViewData["Title"] = "Subsidiaries of company";
    //Layout = "GameDevCompanies";
}

    <h1>Subsidiaries of company @ViewBag.CompanyName</h1>

<p>
    @*<a asp-action="Create" asp-route-id="@ViewBag.CompanyId">Add new</a>*@
    @Html.ActionLink("Add new subsidiary", "Create", new { CompanyId = ViewBag.CompanyId })
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ManagerFullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManagerFullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
