@model GameDevCompaniesWebApplication.Subsidiaries

@{
    ViewData["Title"] = "Create";
    //Layout = "GameDevCompanies";
}

<h1>Adding new subsidiary to company @ViewBag.CompanyName</h1>

<h4>Subsidiaries</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            
            <input type ="hidden" value="@ViewBag.CompanyId" name ="CompanyId" />

            <div class="form-group">
                <label asp-for="ManagerFullName" class="control-label"></label>
                <input asp-for="ManagerFullName" class="form-control" />
                <span asp-validation-for="ManagerFullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-area="" asp-controller="GameDevCompanies" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
