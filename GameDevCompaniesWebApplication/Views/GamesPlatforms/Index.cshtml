@model IEnumerable<GameDevCompaniesWebApplication.GamesPlatforms>

@{
    ViewData["Title"] = "Index";
    //Layout = "GameDevCompanies";
}

<h1>Platforms of @ViewBag.GameName</h1>

<p>
    @Html.ActionLink("Add new platform", "Create", new { GameId = ViewBag.GameId })
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Platform.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Platform.Info)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Platform.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Platform.Info)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
